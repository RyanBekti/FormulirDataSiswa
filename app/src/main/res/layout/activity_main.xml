<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9cabee"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="id.sch.smktelkom_mlg.tugas01.xirpl6031.formulirdatasiswa.MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentleft="true"
            android:layout_marginTop="104dp"
            android:text="Nama :"
            android:textColor="#ffffff"
            android:textSize="30px" />

        <EditText
            android:id="@+id/editTextNama"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_weight="1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentleft="true"
            android:layout_below="@+id/editTextNama"
            android:text="Tahun Lahir :"
            android:textColor="#ffffff"
            android:textSize="30px" />

        <EditText
            android:id="@+id/editTextAsal"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_alignParentleft="true"
            android:layout_below="@+id/textView2"
            android:inputType="number" />

        <TextView
            android:id="@+id/textViewjuru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentleft="true"
            android:layout_below="@+id/editTextAsal"
            android:text="Jurusan :"
            android:textColor="#ffffff"
            android:textSize="30px" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentleft="true"
            android:layout_below="@+id/textViewjuru">

            <RadioButton
                android:id="@+id/radioButtonrpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#ffffff"
                android:checked="false"
                android:text="RPL"
                android:textColor="#ffffff" />

            <RadioButton
                android:id="@+id/radioButtontkj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#ffffff"
                android:checked="false"
                android:text="TKJ"
                android:textColor="#ffffff" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentleft="true"
            android:layout_below="@+id/radioGroup"
            android:text="Ekskul :"
            android:textColor="#ffffff"
            android:textSize="30px" />

        <CheckBox
            android:id="@+id/checkBoxBasket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentleft="true"
            android:layout_below="@+id/textView4"
            android:buttonTint="#ffffff"
            android:checked="false"
            android:text="Basket"
            android:textColor="#ffffff" />

        <CheckBox
            android:id="@+id/checkBoxVoli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentleft="true"
            android:layout_below="@+id/checkBoxFutsal"
            android:buttonTint="#ffffff"
            android:checked="false"
            android:text="Voli"
            android:textColor="#ffffff" />

        <CheckBox
            android:id="@+id/checkBoxFutsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentleft="true"
            android:layout_below="@+id/checkBoxBasket"
            android:buttonTint="#ffffff"
            android:checked="false"
            android:text="Futsal"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentleft="true"
            android:layout_alignTop="@+id/spinner"
            android:singleLine="false"
            android:text="Angkatan :"
            android:textColor="#ffffff"
            android:textSize="30px" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignParentleft="@+id/buttonSend"
            android:layout_alignStart="@+id/imageView2"
            android:layout_below="@+id/checkBoxVoli"
            android:background="#9bafc9"
            android:entries="@array/Angkatan"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:layout_centerHorizontal="true"
            android:text="Create" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:src="@drawable/op" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:src="@drawable/wrnh" />

        <TextView
            android:id="@+id/textViewTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonSend" />

        <TextView
            android:id="@+id/textViewAsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewTv" />

        <TextView
            android:id="@+id/jurusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentleft="true"
            android:layout_below="@+id/textViewAsal" />

        <TextView
            android:id="@+id/textViewEkskul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentleft="true"
            android:layout_below="@+id/jurusan" />

        <TextView
            android:id="@+id/last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentleft="true"
            android:layout_below="@+id/textViewEkskul"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewjuru"
            android:layout_alignEnd="@+id/editTextAsal"
            android:layout_alignRight="@+id/editTextAsal"
            android:ems="10"
            android:inputType="number" />


    </RelativeLayout>
</ScrollView>